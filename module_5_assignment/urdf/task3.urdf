<?xml version="1.0" ?>
<robot name="myrobot" xmlns:xacro="http://www.ros.org/wiki/xacro">

  <!-- World Link -->
  <link name="world"/>

  <!-- Base Link -->
  <link name="base">
    <visual>
      <origin xyz="0.0 0.0 0.25" rpy="0.0 0.0 0.0"/>
      <geometry>
        <cylinder radius="0.1" length="0.5"/>
      </geometry>
      <material name="Blue">
        <color rgba="0 0 1 1"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0.0 0.0 0.25" rpy="0.0 0.0 0.0"/>
      <geometry>
        <cylinder radius="0.1" length="0.5"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0.25"/>
      <mass value="5.0"/>
      <inertia ixx="0.1" ixy="0.0" ixz="0.0" iyy="0.1" iyz="0.0" izz="0.1"/>
    </inertial>
  </link>

  <!-- Shoulder Link -->
  <link name="shoulder">
    <visual>
      <origin xyz="0.25 0.0 0.0" rpy="0.0 1.57 0.0"/>
      <geometry>
        <cylinder radius="0.1" length="0.5"/>
      </geometry>
      <material name="Green">
        <color rgba="0 1 0 1"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0.25 0.0 0.0" rpy="0.0 1.57 0.0"/>
      <geometry>
        <cylinder radius="0.1" length="0.5"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0.25 0 0"/>
      <mass value="4.0"/>
      <inertia ixx="0.05" ixy="0.0" ixz="0.0" iyy="0.05" iyz="0.0" izz="0.05"/>
    </inertial>
  </link>

  <!-- Elbow Link -->
  <link name="elbow">
    <visual>
      <origin xyz="0.25 0.0 0.0" rpy="0.0 1.57 0.0"/>
      <geometry>
        <cylinder radius="0.1" length="0.5"/>
      </geometry>
      <material name="Red">
        <color rgba="1 0 0 1"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0.25 0.0 0.0" rpy="0.0 1.57 0.0"/>
      <geometry>
        <cylinder radius="0.1" length="0.5"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0.25 0 0"/>
      <mass value="3.0"/>
      <inertia ixx="0.03" ixy="0.0" ixz="0.0" iyy="0.03" iyz="0.0" izz="0.03"/>
    </inertial>
  </link>

  <!-- Gripper Link -->
  <link name="gripper">
    <visual>
      <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 1.57"/>
      <geometry>
        <cylinder radius="0.05" length="0.25"/>
      </geometry>
      <material name="Yellow">
        <color rgba="1 1 0 1"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 1.57"/>
      <geometry>
        <cylinder radius="0.05" length="0.25"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0"/>
      <mass value="1.0"/>
      <inertia ixx="0.01" ixy="0.0" ixz="0.0" iyy="0.01" iyz="0.0" izz="0.01"/>
    </inertial>
  </link>

  <!-- Joints -->
  <joint name="base_joint" type="continuous">
    <origin xyz="0.0 0.0 0.1" rpy="0 0.0 0.0"/>
    <parent link="world"/>
    <child link="base"/>
    <axis xyz="0.0 0.0 1.0"/>
  </joint>

  <joint name="shoulder_joint" type="revolute">
    <origin xyz="0.0 0.0 0.5" rpy="1.57 0.0 0.0"/>
    <parent link="base"/>
    <child link="shoulder"/>
    <axis xyz="0.0 0.0 1.0"/>
    <limit lower="-1.57" upper="1.57" effort="10.0" velocity="1.0"/>
  </joint>

  <joint name="elbow_joint" type="revolute">
    <origin xyz="0.5 0.0 0.0" rpy="0.0 0.0 0.0"/>
    <parent link="shoulder"/>
    <child link="elbow"/>
    <axis xyz="0.0 0.0 1.0"/>
    <limit lower="-1.57" upper="1.57" effort="8.0" velocity="1.0"/>
  </joint>

  <joint name="gripper_joint" type="prismatic">
    <origin xyz="0.5 0.0 0.0" rpy="1.57 0.0 1.57"/>
    <parent link="elbow"/>
    <child link="gripper"/>
    <axis xyz="0.0 0.0 1.0"/>
    <limit lower="0.0" upper="0.125" effort="2.0" velocity="0.05"/>
  </joint>

  <!-- Custom Arm Position Controller -->
  <ros2_control name="GazeboSystem" type="system">
    <hardware>
      <plugin>gazebo_ros2_control/GazeboSystem</plugin>
    </hardware>

    <!-- Base Joint -->
    <joint name="base_joint">
      <command_interface name="position">
        <param name="min">-3.14</param>
        <param name="max">3.14</param>
      </command_interface>
      <state_interface name="position"/>
      <state_interface name="velocity"/>
    </joint>

    <!-- Shoulder Joint -->
    <joint name="shoulder_joint">
      <command_interface name="position">
        <param name="min">-1.57</param>
        <param name="max">1.57</param>
      </command_interface>
      <state_interface name="position"/>
      <state_interface name="velocity"/>
    </joint>

    <!-- Elbow Joint -->
    <joint name="elbow_joint">
      <command_interface name="position">
        <param name="min">-1.57</param>
        <param name="max">1.57</param>
      </command_interface>
      <state_interface name="position"/>
      <state_interface name="velocity"/>
    </joint>

    <!-- Gripper Joint -->
    <joint name="gripper_joint">
      <command_interface name="position">
        <param name="min">0.0</param>
        <param name="max">0.1</param>
      </command_interface>
      <state_interface name="position"/>
      <state_interface name="velocity"/>
    </joint>
  </ros2_control>

  <gazebo>
    <plugin filename="libgazebo_ros2_control.so" name="gazebo_ros2_control">
      <robot_sim_type>gazebo_ros2_control/GazeboSystem</robot_sim_type>
      <parameters>/home/ashish/assignment_ws/src/robotics_software_engineer/module_5_assignment/config/arm_controller.yaml</parameters>
    </plugin>
  </gazebo>

</robot>
